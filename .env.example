# Lazy Crawl Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# LOGGING
# ============================================
# Log level: debug | info | warn | error | fatal
# LOG_LEVEL=info

# ============================================
# SHARED SETTINGS (CRAWL_)
# ============================================
# Crawl state persistence file
# CRAWL_STATE_FILE=./crawl-state.json

# Output directory for markdown files
# CRAWL_OUTPUT_DIR=./output

# ============================================
# FACEBOOK CRAWLER (FB_)
# ============================================
# Playwright session storage directory
# FB_AUTH_DIR=./fb-auth

# Facebook feed URL to crawl
# FB_FAVORITES_URL=https://www.facebook.com/?filter=favorites&sk=h_chr

# Maximum scroll iterations
# FB_MAX_SCROLL=50

# ============================================
# TWITTER CRAWLER (TWITTER_)
# ============================================
# API key for rettiwt-api (REQUIRED)
RETTIWT_API_KEY=

# Twitter list ID to crawl (REQUIRED)
TWITTER_LIST_ID=

# Maximum API pages to fetch
# TWITTER_MAX_PAGES=2

# Tweets per API request
# TWITTER_TWEETS_PER_PAGE=50

# ============================================
# GMAIL CRAWLER (GMAIL_)
# ============================================
# OAuth client credentials (REQUIRED)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# OAuth tokens directory
# GMAIL_AUTH_DIR=./gmail-auth

# Sender config file path
# GMAIL_CONFIG_FILE=./gmail-config.json

# Maximum email age in days
# GMAIL_MAX_AGE_DAYS=30

# Maximum emails per sender
# GMAIL_MAX_EMAILS=100
